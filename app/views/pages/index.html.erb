<article class='index row'>
  <div class='col-sm-8 col-sm-offset-2'>
    <p class='logo logo-lg'>LibreDMM</p>
    <%= form_tag search_path, method: :get, class: 'form' do %>
      <div class='form-group'>
        <%= text_field_tag 'q', nil, placeholder: 'Search by ID, for example: ABP-123', class: 'form-control'%>
      </div>
      <div class='form-group'>
        <%= submit_tag 'Search', class: 'btn btn-success' %>
      </div>
      <div class='form-group'>
        <%= link_to 'Just Look Around', products_path, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</article>
