<% @products.in_groups_of(6, false).each do |group| %>
  <div class='product-group row'>
    <% group.each do |product| %>
      <div class='col-sm-2'>
        <%= link_to product do %>
          <%= image_tag product.thumbnail_image, class: 'thumbnail col-sm-12' %>
        <% end %>
        <%= link_to product do %>
          <%= product.code %>
          <%= product.title %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
