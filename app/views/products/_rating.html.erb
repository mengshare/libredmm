<% rating = current_user_rating(product) %>
<% (1..5).each do |i| %>
  <%= link_to product_rate_path(product, i), method: :post, class: 'rating' do %>
    <% if rating >= i %>
      <%= icon_fa 'star' %>
    <% else %>
      <%= icon_fa 'star-o' %>
    <% end %>
  <% end %>
<% end %>
<% if rating > 0 %>
  <small>
    <%= link_to product_unrate_path(product), method: :delete, class: 'rating' do %>
      <%= icon_fa 'trash-o' %>
    <% end %>
  </small>
<% end %>
