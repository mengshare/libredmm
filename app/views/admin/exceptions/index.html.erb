<article class="row">
  <h1>Exceptions</h1>
  <table class="table">
    <thead>
      <tr>
        <th>URI</th>
        <th>Message</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @exceptions.each do |exception| %>
        <tr>
          <td><%= exception.uri %></td>
          <td><%= exception.message %></td>
          <td><%= link_to 'Show', exception %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</article>
